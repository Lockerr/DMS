= form_for(@color) do |f|
  - if @color.errors.any?
    #error_explanation
      %h2
        = pluralize(@color.errors.count, "error")
        prohibited this color from being saved:
      %ul
        - @color.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :code
    %br/
    = f.text_field :code
  .field
    = f.label :desc
    %br/
    = f.text_field :desc
  .field
    = f.label :color
    %br/
    = f.text_field :color
  .actions
    = f.submit
