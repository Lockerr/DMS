= form_for(@opt) do |f|
  - if @opt.errors.any?
    #error_explanation
      %h2
        = pluralize(@opt.errors.count, "error")
        prohibited this opt from being saved:
      %ul
        - @opt.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :code
    %br/
    = f.text_field :code
  .field
    = f.label :desc
    %br/
    = f.text_field :desc
  .field
    = f.label :pseudo_klasse
    %br/
    = f.text_field :pseudo_klasse
  .field
    = f.label :klasse_id
    %br/
    = f.number_field :klasse_id
  .actions
    = f.submit
